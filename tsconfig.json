{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "outDir": "lib",
    "lib": ["es6", "es7"],
    "baseUrl": "src",
    "rootDir": "src"
  },
  "exclude": ["lib", "build", "node_modules"]
}
